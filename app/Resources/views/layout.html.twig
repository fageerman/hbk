    <div class="container-fluid">
      <div class="row">  
        <div class="col-sm-2 col-md-2 sidebar">
           {{ knp_menu_render('main') }}
        </div>
        
        
        <div class="col-sm-4 col-sm-offset-2 col-md-4 col-md-offset-2 main" ng-controller="mainCtrl">

            <h2 class="sub-headsr">Add Payment</h2>

                <form>
                        <div class="form-group">
                              <label for="exampleInputEmail1">Customer ID</label>
                              <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Scan barcode..">
                        </div>
                        <div class="form-group">
                              <label for="exampleInputPassword1">Invoice ID</label>
                              <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Scan barcode..">
                        </div>
                        <div class="form-group">
                              <label for="exampleInputFile">Payment Method</label>
                              <select class="form-control">
                                <option>Cash</option>
                                <option>PIN</option>
                                <option>Combined(CASH/PIN)</option>
                              </select>
                        </div>
                        <div class="form-group">
                              <label for="exampleInputPassword1">Date</label>
                              <input type='text' class="form-control" />
                        </div>	
                       <div class="form-group">
                              <label for="exampleInputPassword1">Amount (Afl.)</label>
                              <input type="number" class="form-control" id="exampleInputPassword1" min=1 max=10000>
                        </div>
                        <div class="form-group">
                              <label for="exampleInputPassword1">Note</label>
                              <textarea class="form-control" id="exampleInputPassword1" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                              <input type="button" class="btn  btn-primary"value="Apply">
                        </div>

                </form>
        </div>
			
      </div>
    </div>
    
