{% extends "layout.html.twig" %}

{% set subTitle = "Receipt Transaction"%}

{% block subtitle %} {{ subTitle }} {% endblock%}
{% block content %}
<div class="col-sm-9 col-sm-offset-2 col-md-9 col-md-offset-2 main">       
    <div class="printable" id="receipt" style="width:800px">
        <div style="width:100%">
             <img height="120" width="120" src="{{ asset('bundles/serlimarserledge/images/serlimarlogo.png') }}" />
            <hr style="border-color:black">
        </div>
        
        <div style="width:100%">
            <p>
                <h3 style="margin:auto;">Kwitantie Huishoudelijke Afval</h3>
            </p>
        </div>
        
    <table style="width:100%">

        <tr>
            <td style="width:60%">Ontvangen van:</td>
            <td style="width:20%">Klant ID</td>
            <td style="width:20%">: {{ transaction.customerid }}</td>
        </tr>
        <tr>
            <td >{{ transaction.firstname}} {{ transaction.name}}</td>
            <td>Datum</td>
            <td>: {{ transaction.transactiondate|date('d F Y') }} </td>
        </tr>
        <tr>
            <td >{{ transaction.address }}</td>
            <td>Betalingsmethode</td>
            <td>: {{ transaction.transactionmethod }}</td>
        </tr>
        <tr>
            <td >{{ transaction.region }}</td>
            <td>Referentie</td>
            <td>: {{ transaction.reference }}</td>
        </tr>
        <tr>
            <td ></td>
            <td>Behandeld door</td>
            <td>: {{ transaction.insertuser }} </td>
        </tr>
        <tr>
            <td style="height:50px"></td>
        </tr>
        <tr>
            <td></td>
            <td style="border: 1px solid black;">Ontvangen</td>
            <td style="border: 1px solid black;">AWG <span style="float:right">{{ transaction.amount|number_format(2, '.', ',') }}</span></td>
        </tr>
    </table>
       
    </div>
</div>

