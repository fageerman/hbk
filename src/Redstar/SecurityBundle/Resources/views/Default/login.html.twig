{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block stylesheets %}
    {{ parent()}}
    {% stylesheets 'bundles/redstarsecurity/css/*' %}
      <link rel="stylesheet" type="text/css" charset="UTF-8" media="all" href="{{ asset_url }}"/>
    {% endstylesheets %}
    
{% endblock %}
{% block body %}

    <div class="login">
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-message alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    
        <div class="header">
        <div>serl<span>EDGE</span></div>
        </div>
        <div class="clearfix"></div>
        
        {% if error %}
            <div class="text-danger"><span class="glyphicon glyphicon-exclamation-sign"></span>{{ error.message }}</div>
        {% endif %}
        
        <form action="{{ path('redstar_security_login_check') }}" method="post">
            <input type="text" id="username" placeholder="username" name="_username" value="{{ last_username }}" />
            <input type="password" id="password" placeholder="password" name="_password" />
            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
            #}
            <input type="hidden" name="_target_path" value="{{ path('serlimar_serledge_transaction')}}" />
            <button type="submit" >Login</button>
        </form>
            <a href="{{ path('serlimar_serledge_forgot_password')}}">Forgot Password?<a/>
    </div>
{% endblock %}